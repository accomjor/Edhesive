package assignment;

import java.util.*;

public class MainGamewheel {

	public static void main(String[] args){
		GameWheel g = new GameWheel();
		int p1 = 0;
		int p2 = 0;
		for(int i = 0; i < 5; i++){
			p1 += g.spinWheel().getPrizeAmount();
		}
		for(int i = 0; i < 5; i++){
			p2 += g.spinWheel().getPrizeAmount();
		}
		System.out.println("Player 1 total: " + p1);

		System.out.println("Player 1 total: " + p1);
	}
	
}